<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:InvestCloud"
             x:Class="InvestCloud.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <Color x:Key="Primary">#1e7d63</Color>
            <Color x:Key="Secondary1">#9EC5AE</Color>
            <Color x:Key="Secondary">#FFFCE5</Color>
            <Color x:Key="ContainerBackgroundColor">#FEFBE4</Color>
            <Color x:Key="Nyanza">#CBDEC7</Color>
            <Color x:Key="PlaceholderColor">#E5E5E5</Color>
            <Color x:Key="GrayColor">#252A2E</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>